generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  dateJoined DateTime @default(now())
  firstName  String
  lastName   String
  email      String   @unique
  profile    Profile?
  recipes    Recipe[]
}

model Profile {
  id           Int     @id @default(autoincrement())
  bio          String
  image        String?
  defaultImage String
  user         User    @relation(fields: [userId], references: [id])
  userId       String  @unique
}

model Recipe {
  id           String         @id @default(cuid())
  uploadedAt   DateTime       @default(now())
  image        String?
  name         String         @unique
  slug         String         @unique
  summary      String
  servings     Int
  cooking      Cooking?
  ingredients  Ingredients[]
  instructions Instructions[]
  nutrition    Nutrition[]
  uploader     User?          @relation(fields: [uploaderId], references: [id])
  uploaderId   String?        @unique
}

model Cooking {
  id          Int    @id @default(autoincrement())
  total       Float
  preparation Float
  cooking     Float
  recipe      Recipe @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId    String @unique
}

model Ingredients {
  id         Int     @id @default(autoincrement())
  ingredient String
  recipe     Recipe? @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId   String?
}

model Instructions {
  id          Int     @id @default(autoincrement())
  step        Int
  instruction String
  recipe      Recipe? @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId    String?
}

model Nutrition {
  id       Int     @id @default(autoincrement())
  name     String
  value    String
  recipe   Recipe? @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  recipeId String?
}
